{
  "name": "kpollich.github.io",
  "description": "Kyle Pollich Personal Site/Blog",
  "version": "1.0.0",
  "author": "Kyle Pollich <kpollich1@gmail.com>",
  "dependencies": {
    "bulma": "^0.7.1",
    "gatsby": "2.0.19",
    "gatsby-link": "2.0.4",
    "gatsby-plugin-react-helmet": "3.0.0",
    "gatsby-plugin-sass": "2.0.1",
    "gatsby-plugin-typescript": "^2.0.0",
    "gatsby-remark-prismjs": "3.0.1",
    "gatsby-source-contentful": "2.0.2",
    "gatsby-source-filesystem": "2.0.2",
    "gatsby-transformer-json": "2.1.4",
    "gatsby-transformer-remark": "2.1.6",
    "node-sass": "^4.9.3",
    "prismjs": "^1.15.0",
    "react": "^16.7.0",
    "react-dom": "^16.7.0",
    "react-helmet": "^5.2.0"
  },
  "keywords": [
    "gatsby"
  ],
  "license": "MIT",
  "main": "n/a",
  "scripts": {
    "build": "gatsby build",
    "develop": "gatsby develop",
    "format": "prettier --no-semi --single-quote --write 'src/**/*.js'",
    "lint": "eslint src/**/*.js",
    "precommit": "lint-staged",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "lint-staged": {
    "*.{js,json,css}": [
      "yarn format"
    ]
  },
  "devDependencies": {
    "@types/prop-types": "^15.5.6",
    "@types/react": "^16.4.16",
    "@types/react-helmet": "^5.0.7",
    "eslint": "^5.6.1",
    "eslint-config-prettier": "^3.1.0",
    "eslint-plugin-prettier": "^3.0.0",
    "eslint-plugin-react": "^7.11.1",
    "husky": "^1.1.1",
    "lint-staged": "^7.3.0",
    "prettier": "^1.14.3"
  },
  "apollo": {
    "schemas": {
      "gatsby": {
        "endpoint": "http://localhost:8000/___graphql"
      }
    },
    "queries": {
      "schema": "gatsby",
      "includes": [
        "./src/**/*.js"
      ],
      "excludes": [
        "node_modules/**"
      ]
    }
  }
}
